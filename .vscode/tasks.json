{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "run dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "(.*?)"
					},
					"endsPattern": {
						"regexp": "bundle generation complete"
					}
				}
			}
		},
		{
			"label": "vscode-debug",
			"type": "shell",
			"command": "next dev --host=127.0.0.1",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "dev",
			"problemMatcher": [],
			"label": "npm: dev",
			"detail": "next dev"
		}
	]
}
